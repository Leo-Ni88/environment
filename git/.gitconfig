[core]
    pager = delta
    ; pager = diff-so-fancy | less --tabs=4 -RFX
    editor = nvim
    excludesfile = ~/.gitignore_global
[interactive]
    ; diffFilter = diff-so-fancy --patch
    diffFilter = delta --color-only --show-syntax-themes --light
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[delta]
    features = GitHub
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
    line-numbers = true
[merge]
    conflictstyle = diff3
[user]
    email = jni@bouffalolab.com
    name = jni
; [http]
;   proxy = socks5://172.16.3.3:1081
; [https]
;   proxy = socks5://172.16.3.3:1081
; [http "http://code.bouffalolab.com"]
;   proxy = socks5://172.16.3.3:1081
[include]
    path = ~/.git-repo/gitconfig
    path = ~/workspace/github/delta/themes.gitconfig
[difftool]
    prompt = true
[diff]
    tool = nvimdiff
    colorMoved = default
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[color]
	ui = auto
[oh-my-zsh]
	hide-status = 1



